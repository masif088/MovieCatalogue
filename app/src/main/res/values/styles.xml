<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Title</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TitleContext" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TitleContext</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ContentContext" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TitleContext</item>
        <item name="android:textColor">#202020</item>
    </style>
    <style name="Rating" parent="@style/TextAppearance.AppCompat">
        <item name="android:background">@drawable/rating</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>